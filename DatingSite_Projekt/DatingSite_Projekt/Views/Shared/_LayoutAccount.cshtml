@using System.Activities.Expressions
@using System.Web.UI.WebControls
@using DatingSite_Projekt.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Profile", "Account", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Friends", "FriendList", "Account", new { area = "" }, new { @class = "navbar-brand" })
                @if (FriendRequestHelper.FriendRequestStatus())
                {
                    @Html.ActionLink("Friend Requests", "FriendRequest", "Account", new { area = "" }, new { @class = "navbar-brand", Style = "color:red" })
                }
                else
                {
                @Html.ActionLink("Friend Requests", "FriendRequest", "Account", new { area = "" }, new { @class = "navbar-brand" })
                }
                @Html.ActionLink("Edit Profile", "Edit", "Account", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Edit UserInfo", "EditUserInfo", "Account", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Search Users", "SearchUsers", "Account", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "navbar-brand" })

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()


    </div>


    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

