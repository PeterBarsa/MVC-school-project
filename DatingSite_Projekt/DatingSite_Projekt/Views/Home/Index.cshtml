@using DatingSite_Projekt.Models
@model IEnumerable<AccountUserModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<!-- Page Content -->
<div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron">
        <h1>Welcome to DatingSite!</h1>
        <p>Get ready to find the partner of a lifetime. Register today to get access to all our super hot and ambitious singles!</p>
        <p>
        </p>
    </header>

    <hr>

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Members:</h3>
        </div>
    </div>
    <!-- /.row -->
    <!-- Page Features -->
    <div class="row text-center">

        @foreach (var u in @Model)
        {
            var profileImagePath = "/Images/Profile/" + @u.Username + ".jpg";
            profileImagePath = File.Exists(Server.MapPath(profileImagePath)) ? profileImagePath : "/Images/Profile/noimage.jpg";
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="@profileImagePath" class="img-rounded">
                    <div class="caption">
                        <h3> @u.Username, @u.Age</h3>
                        <p>@u.AboutMe</p>
                        <p>
                            <a href="/account/Friends/@u.UserId" class="btn btn-primary">Go to profile</a>
                        </p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>